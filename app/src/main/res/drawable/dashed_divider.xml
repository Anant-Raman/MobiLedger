<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="0dp">

        <shape android:shape="line">
            <stroke
                android:width="1.5dp"
                android:color="@color/colorGreen"
                android:dashGap="5dp"
                android:dashWidth="10dp" />

            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>