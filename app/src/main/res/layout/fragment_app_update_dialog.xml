<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/cdp_36"
        android:paddingTop="@dimen/cdp_24"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalScreenGuideline_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalScreenGuideline_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvAppUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/GelionSemiBoldBlue24"
            android:text="@string/app_update_dialog"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@id/verticalScreenGuideline_10"
            app:layout_constraintEnd_toEndOf="@id/verticalScreenGuideline_90"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvAppUpdateMessage"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvAppUpdateMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/GelionRegular18"
            android:text="@string/app_update_dialog_message"
            android:maxLines="1"
            android:layout_marginTop="@dimen/cdp_8"
            app:layout_constraintStart_toStartOf="@id/verticalScreenGuideline_10"
            app:layout_constraintEnd_toEndOf="@id/verticalScreenGuideline_90"
            app:layout_constraintTop_toBottomOf="@+id/tvAppUpdate"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNotNow"
            android:layout_width="@dimen/cdp_100"
            android:layout_height="@dimen/cdp_32"
            android:layout_marginTop="@dimen/cdp_16"
            android:background="@color/colorPrimary"
            android:text="@string/not_now"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@id/verticalScreenGuideline_10"
            app:layout_constraintEnd_toStartOf="@id/btnYes"
            app:layout_constraintTop_toBottomOf="@+id/tvAppUpdateMessage"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnYes"
            android:layout_width="@dimen/cdp_100"
            android:layout_height="@dimen/cdp_32"
            android:layout_marginTop="@dimen/cdp_16"
            android:background="@color/colorPrimary"
            android:text="@string/yes"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@id/btnNotNow"
            app:layout_constraintEnd_toStartOf="@id/verticalScreenGuideline_90"
            app:layout_constraintTop_toBottomOf="@+id/tvAppUpdateMessage"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>