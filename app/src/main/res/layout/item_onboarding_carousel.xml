<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/carouselHeadingTv"
            style="@style/GelionSemiBold24"
            android:layout_width="@dimen/cdp_320"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cdp_48"
            android:layout_marginEnd="@dimen/cdp_48"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/cdp_16"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/carouselSubHeadingTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/carouselSubHeadingTv"
            style="@style/GelionRegular18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cdp_32"
            android:layout_marginEnd="@dimen/cdp_32"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/carouselHeadingTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/carouselIv" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/carouselIv"
            android:layout_width="0dp"
            android:layout_height="@dimen/cdp_320"
            android:layout_marginStart="@dimen/cdp_100"
            android:layout_marginEnd="@dimen/cdp_100"
            android:src="@drawable/app_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/carouselSubHeadingTv"
            app:layout_constraintVertical_bias="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>